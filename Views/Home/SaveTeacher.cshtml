@model UniversityBITM.Models.Teacher

@{
    ViewBag.Title = "SaveTeacher";
    List<SelectListItem> departmentItems = ViewBag.DepartmentLists;
    List<SelectListItem> designations = ViewBag.Designations;
    string message = ViewBag.Message;
}


<div class="padding-up"></div>
@using (Html.BeginForm())
{
    <fieldset>
        <legend>Save Teacher</legend>
        <table class="table table-borderless d-grid">
            <tr>
                <td>@Html.LabelFor(m => m.Name)</td>
                <td>@Html.TextBoxFor(m => m.Name, new { placeholder = "Enter Teacher's Name" })</td>
                <td>@Html.ValidationMessageFor(m => m.Name)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Address)</td>
                <td>@Html.TextAreaFor(m => m.Address, new { placeholder = "Enter Address" })</td>
                <td>@Html.ValidationMessageFor(m => m.Address)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Email)</td>
                <td>@Html.TextBoxFor(m => m.Email, new { placeholder = "Enter Email" })</td>
                <td>@Html.ValidationMessageFor(m => m.Email)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.ContactNo)</td>
                <td>@Html.TextBoxFor(m => m.ContactNo, new { placeholder = "Enter Teacher's Contact No" })</td>
                <td>@Html.ValidationMessageFor(m => m.ContactNo)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Designation)</td>
                <td>@Html.DropDownListFor(m => m.Designation, designations, "Value", "Text")</td>
                <td>@Html.ValidationMessageFor(m => m.Designation)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.DepartmentId)</td>
                <td>@Html.DropDownListFor(m => m.DepartmentId, departmentItems, "Value", "Text")</td>
                <td>@Html.ValidationMessageFor(m => m.DepartmentId)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.CreditToBeTaken)</td>
                <td>@Html.TextBoxFor(m => m.CreditToBeTaken, new { placeholder = "Credits" })</td>
                <td>@Html.ValidationMessageFor(m => m.CreditToBeTaken)</td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Save" class="btn-outline-dark btn-sm" /></td>
            </tr>
        </table>
        <label>@message</label>
    </fieldset>
}
